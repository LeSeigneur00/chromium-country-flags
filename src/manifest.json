{
    "name": "Country Flag Fixer",
    "description": "The solution for Chromium users on Windows! Automatically replace mysterious abbreviations with the corresponding flag.",
    "version": "1.2.1",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["assets/TwemojiCountryFlags.woff2"]
        }
    ],
    "icons": { 
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
       "128": "assets/icons/icon128.png" 
    }
}